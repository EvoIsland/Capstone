{
  "kind": "collectionType",
  "collectionName": "noticias",
  "info": {
    "singularName": "noticia",
    "pluralName": "noticias",
    "displayName": "noticia"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "slug": {
      "type": "uid",
      "targetField": "titulo"
    },
    "titulo": {
      "type": "string"
    },
    "encabezado": {
      "type": "text"
    },
    "foto": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "descripcion": {
      "type": "text"
    },
    "descripcionInferior": {
      "type": "text"
    },
    "noticiasCards": {
      "type": "component",
      "component": "shared.noticias-cards",
      "repeatable": false
    }
  }
}
